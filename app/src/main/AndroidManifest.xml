<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angel.black.baskettogether">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".intro.IntroActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/login"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTop"/>
        <activity
            android:name=".signup.SignUpActivity"
            android:label="@string/action_sign_up"
            android:parentActivityName=".login.LoginActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".recruit.RecruitPostListActivity"
            android:label="@string/title_activity_recruit_post_list"
            android:launchMode="singleTop" />
        <activity
            android:name=".recruit.RecruitPostRegistActivity"
            android:label="@string/title_activity_recruit_post_regist"
            android:parentActivityName=".recruit.RecruitPostListActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".recruit.RecruitPostDetailActivity"
            android:label="@string/title_activity_recruit_post_detail"
            android:parentActivityName=".recruit.RecruitPostListActivity"/>
    </application>

</manifest>