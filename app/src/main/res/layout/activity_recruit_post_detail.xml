<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".recruit.RecruitPostDetailActivity">

    <com.angel.black.baskettogether.common.view.CommentInputView
        android:id="@+id/comment_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <fragment
        android:id="@+id/recruit_post_detail_fragment"
        android:name="com.angel.black.baskettogether.recruit.fragment.RecruitPostDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/comment_input_view"/>

</RelativeLayout>
