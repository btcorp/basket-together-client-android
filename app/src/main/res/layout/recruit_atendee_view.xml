<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.blackangel.baskettogether.app.view.imageview.RoundedImageView
        android:id="@+id/attendee_image"
        android:layout_width="@dimen/recruit_post_attendee_image_size"
        android:layout_height="@dimen/recruit_post_attendee_image_size"
        android:layout_gravity="center_horizontal"/>

    <TextView
        style="@style/recruit_post_attendee_name"
        android:id="@+id/attendee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>