<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 댓글 입력 영역 start -->
    <RelativeLayout
        android:id="@+id/layout_comment_input_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/lin_comment_char_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <!-- 댓글 입력글자수 -->
            <TextView
                android:id="@+id/comment_input_char_num"
                style="@style/detail_comment_input_char_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <!-- 댓글 입력 최대글자수 -->

            <TextView
                android:id="@+id/comment_char_limit"
                style="@style/detail_comment_char_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="/ 100" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_comment_char_num"
            android:layout_marginTop="3dp" >

            <FrameLayout
                android:id="@+id/layout_btn_attach_photo_and_reply_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" >

                <!-- 답글 라인 이미지 -->
                <ImageView
                    android:id="@+id/img_reply_line"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/ic_location_on_white_24dp"
                    android:onClick="onClick"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- 댓글 등록 버튼 -->
            <Button
                android:id="@+id/btn_comment_regist"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:text="@string/regist"
                android:onClick="onClick" />

            <!-- 댓글 입력 필드 -->
            <EditText
                android:id="@+id/detail_edit_comment"
                style="@style/detail_comment_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_comment_regist"
                android:layout_toRightOf="@id/layout_btn_attach_photo_and_reply_line"
                android:layout_marginLeft="8dp"
                android:ems="10"
                android:hint="@string/comment_input"
                android:maxLength="100"
                android:minHeight="40dp"
                android:maxHeight="100dp" />

        </RelativeLayout>
    </RelativeLayout>
    <!-- 댓글 입력 영역 end -->

</LinearLayout>